<Section title="Education" id="education">
  <div class="content-section">
    <div class="bg-mantle rounded-lg p-6 border border-surface0">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-3">
        <h3 class="text-xl font-semibold text-mauve">Tecmilenio University</h3>
        <span class="text-sm text-gray-400 mt-1 sm:mt-0">Metepec, MX</span>
      </div>
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-3">
        <h4 class="text-lg text-white font-medium">B.E. in Software Engineering</h4>
        <span class="text-sm text-sky mt-1 sm:mt-0">Aug 2022 - Expected June 2026</span>
