---
import ProfileImage from "./ProfileImage.astro"

const name = "Manuel DÃ­az";
const title = "Full Stack Engineer";
const experience = "Full-stack developer proficient in designing, building, and deploying web applications.";
---

<div class="my-16 flex flex-col lg:flex-row">
  <div class="text-left w-full lg:w-1/2 flex flex-col justify-center">
    <h1 class="text-5xl font-bold mb-2 typeme text-white">{name}</h1>
    <h2 class="text-3xl text-gray-200 font-semibold mb-4">{title}</h2>
    <p class="text-lg text-sky">{experience}</p>
  </div>
  <div class="w-full lg:w-1/2 flex justify-center">
    <ProfileImage/>
  </div>
</div>

<style>
  .typeme {
    width: 12ch;
    animation: typing 2s steps(11), blink .5s step-end infinite alternate;
    white-space: nowrap;
    overflow: hidden;
    border-right: 10px solid #f2d5cf;
  }

  @keyframes typing {
    0% { width: 0; }
    100% { width: 12ch; }
  }
      
  @keyframes blink {
    50% { border-color: transparent;}
  }
</style>
