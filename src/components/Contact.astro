---
import Section from "./Section.astro"
---

<Section title="Contact" id="contact">
  <div class="grid md:grid-cols-2 gap-8">
    <div class="space-y-6">
      <div>
        <h3 class="text-xl font-semibold text-green mb-4">Get In Touch</h3>
        <p class="text-gray-300 mb-6">
          I'm always interested in new opportunities, collaborations, or just having a chat about technology. 
          Feel free to reach out if you'd like to work together or discuss any projects!
        </p>
      </div>
      
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-mantle rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">Email</p>
            <a href="mailto:manuel@example.com" class="text-green hover:text-white transition-colors duration-300">
              manuel@example.com
            </a>
          </div>
        </div>
        
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-mantle rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">GitHub</p>
            <a href="https://github.com/Macnolo0x7D4" target="_blank" rel="noopener noreferrer" class="text-green hover:text-white transition-colors duration-300">
              @Macnolo0x7D4
            </a>
          </div>
        </div>
        
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-mantle rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">LinkedIn</p>
            <a href="https://linkedin.com/in/manuel-diaz" target="_blank" rel="noopener noreferrer" class="text-green hover:text-white transition-colors duration-300">
              manuel-diaz
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div>
      <form class="space-y-4" id="contact-form">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full px-4 py-3 bg-mantle border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue focus:border-transparent text-white placeholder-gray-400 transition-all duration-300"
            placeholder="Your Name"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-4 py-3 bg-mantle border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue focus:border-transparent text-white placeholder-gray-400 transition-all duration-300"
            placeholder="your.email@example.com"
          />
        </div>
        
        <div>
          <label for="subject" class="block text-sm font-medium text-gray-300 mb-2">Subject</label>
          <input 
            type="text" 
            id="subject" 
            name="subject" 
            required 
            class="w-full px-4 py-3 bg-mantle border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue focus:border-transparent text-white placeholder-gray-400 transition-all duration-300"
            placeholder="What's this about?"
          />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
          <textarea 
            id="message" 
            name="message" 
            rows="5" 
            required 
            class="w-full px-4 py-3 bg-mantle border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue focus:border-transparent text-white placeholder-gray-400 transition-all duration-300 resize-vertical"
            placeholder="Your message here..."
          ></textarea>
        </div>
        
        <button 
          type="submit" 
          class="w-full btn-primary inline-flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
          Send Message
        </button>
      </form>
      
      <div id="form-message" class="mt-4 p-4 rounded-lg hidden">
        <p class="text-sm"></p>
      </div>
    </div>
  </div>
</Section>

<script>
  const contactForm = document.getElementById('contact-form') as HTMLFormElement;
  const formMessage = document.getElementById('form-message') as HTMLElement;

  contactForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(contactForm);
    const submitButton = contactForm.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    // Show loading state
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.innerHTML = `
        <svg class="w-5 h-5 mr-2 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Sending...
      `;
    }
    
    try {
      // Simulate form submission (replace with actual endpoint)
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      // Show success message
      formMessage.className = 'mt-4 p-4 rounded-lg bg-green/10 border border-green/20';
      formMessage.querySelector('p')!.textContent = 'Thank you! Your message has been sent successfully.';
      formMessage.querySelector('p')!.className = 'text-sm text-green';
      formMessage.classList.remove('hidden');
      
      // Reset form
      contactForm.reset();
      
    } catch (error) {
      // Show error message
      formMessage.className = 'mt-4 p-4 rounded-lg bg-red/10 border border-red/20';
      formMessage.querySelector('p')!.textContent = 'Sorry, there was an error sending your message. Please try again.';
      formMessage.querySelector('p')!.className = 'text-sm text-red';
      formMessage.classList.remove('hidden');
    } finally {
      // Reset button
      if (submitButton) {
        submitButton.disabled = false;
        submitButton.innerHTML = `
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
          Send Message
        `;
      }
    }
  });
</script>