---
import Section from "./Section.astro"

const projects = [
  {
    title: "nix-config",
    description: "A flake-based, modular configuration system that unifies OS and user environments across Linux and macOS, targeting ARM and x86_64 hosts. Provides pinned, reproducible builds with per-host hardware layering and user-level dotfiles through Home Manager.",
    technologies: ["Nix", "Nushell", "Shell", "NixOS", "Nix-Darwin", "Home Manager", "i3", "rofi", "kitty", "ghostty"],
    image: "/images/projects/nix-config.jpg",
    github: "https://github.com/Macnolo0x7D4/nix-config",
    demo: "https://github.com/Macnolo0x7D4/nix-config",
    featured: true
  },
  {
    title: "nvim.lua",
    description: "A curated Neovim setup built around lazy.nvim that delivers LSP-driven editing, AI-assisted completion with Copilot, integrated test running via neotest, fuzzy navigation with Telescope and Harpoon, and enhanced diagnostics and command UI via Trouble and Noice.",
    technologies: ["Lua", "lazy.nvim", "Neovim LSP", "nvim-cmp", "GitHub Copilot", "neotest", "Telescope", "Harpoon", "Treesitter", "Trouble.nvim"],
    image: "/images/projects/nvim.jpg",
    github: "https://github.com/Macnolo0x7D4/nvim.lua",
    demo: "https://github.com/Macnolo0x7D4/nvim.lua",
    featured: true
  },
];

const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<Section title="Projects" id="projects">
  <div class="space-y-12">
    <!-- Featured Projects -->
    <div>
      <h3 class="text-xl font-semibold text-mauve mb-6">Featured Projects</h3>
      <div class="space-y-8">
        {featuredProjects.map((project, index) => (
          <div class={`group relative bg-mantle rounded-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-blue/10 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} md:flex`}>
            <div class="md:w-1/2 relative overflow-hidden">
              <div class="aspect-video bg-gradient-to-br from-blue/20 to-green/20 flex items-center justify-center">
                <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            
            <div class="md:w-1/2 p-6 flex flex-col justify-center">
              <h4 class="text-2xl font-bold text-white mb-3 group-hover:text-green transition-colors duration-300">
                {project.title}
              </h4>
              <p class="text-gray-300 mb-4 leading-relaxed">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {project.technologies.map(tech => (
                  <span class="px-3 py-1 bg-blue/20 text-blue text-sm rounded-full border border-blue/30">
                    {tech}
                  </span>
                ))}
              </div>
              
              <div class="flex gap-4">
                <a 
                  href={project.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-gray-300 hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue/50 rounded px-1"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Code
                </a>
                <a 
                  href={project.demo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-green/50 rounded px-1"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  Live Demo
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    
    <div class="text-center">
      <p class="text-gray-400 mb-4">Want to see more of my work?</p>
      <a 
        href="https://github.com/Macnolo0x7D4" 
        target="_blank" 
        rel="noopener noreferrer"
        class="btn-secondary inline-flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View All Projects on GitHub
      </a>
    </div>
  </div>
</Section>