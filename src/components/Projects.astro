---
import Section from "./Section.astro"

const projects = [
  {
    title: "E-commerce Platform",
    description: "A full-stack e-commerce platform built with Next.js, PostgreSQL, and Stripe integration. Features include user authentication, product management, shopping cart, and payment processing.",
    technologies: ["Next.js", "React", "PostgreSQL", "Stripe", "Tailwind CSS", "TypeScript"],
    image: "/images/projects/ecommerce.jpg",
    github: "https://github.com/Macnolo0x7D4/ecommerce-platform",
    demo: "https://ecommerce-demo.vercel.app",
    featured: true
  },
  {
    title: "Real-time Chat Application",
    description: "A real-time chat application using Phoenix LiveView and Elixir. Features include real-time messaging, user presence, private rooms, and message history.",
    technologies: ["Elixir", "Phoenix", "LiveView", "PostgreSQL", "CSS"],
    image: "/images/projects/chat-app.jpg",
    github: "https://github.com/Macnolo0x7D4/phoenix-chat",
    demo: "https://phoenix-chat-demo.fly.dev",
    featured: true
  },
  {
    title: "Task Management Dashboard",
    description: "A productivity dashboard built with React and Node.js. Features drag-and-drop task management, team collaboration, time tracking, and analytics.",
    technologies: ["React", "Node.js", "MongoDB", "Express", "Socket.io"],
    image: "/images/projects/task-manager.jpg",
    github: "https://github.com/Macnolo0x7D4/task-dashboard",
    demo: "https://task-manager-demo.netlify.app",
    featured: false
  },
  {
    title: "Weather Analytics API",
    description: "A RESTful API built with Go that aggregates weather data from multiple sources. Includes data validation, caching, rate limiting, and comprehensive documentation.",
    technologies: ["Go", "PostgreSQL", "Redis", "Docker", "OpenAPI"],
    image: "/images/projects/weather-api.jpg",
    github: "https://github.com/Macnolo0x7D4/weather-api",
    demo: "https://weather-api.herokuapp.com/docs",
    featured: false
  }
];

const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<Section title="Projects" id="projects">
  <div class="space-y-12">
    <!-- Featured Projects -->
    <div>
      <h3 class="text-xl font-semibold text-mauve mb-6">Featured Projects</h3>
      <div class="space-y-8">
        {featuredProjects.map((project, index) => (
          <div class={`group relative bg-mantle rounded-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-blue/10 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} md:flex`}>
            <div class="md:w-1/2 relative overflow-hidden">
              <div class="aspect-video bg-gradient-to-br from-blue/20 to-green/20 flex items-center justify-center">
                <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            
            <div class="md:w-1/2 p-6 flex flex-col justify-center">
              <h4 class="text-2xl font-bold text-white mb-3 group-hover:text-green transition-colors duration-300">
                {project.title}
              </h4>
              <p class="text-gray-300 mb-4 leading-relaxed">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {project.technologies.map(tech => (
                  <span class="px-3 py-1 bg-blue/20 text-blue text-sm rounded-full border border-blue/30">
                    {tech}
                  </span>
                ))}
              </div>
              
              <div class="flex gap-4">
                <a 
                  href={project.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-gray-300 hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue/50 rounded px-1"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Code
                </a>
                <a 
                  href={project.demo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-green/50 rounded px-1"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  Live Demo
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Other Projects -->
    <div>
      <h3 class="text-xl font-semibold text-mauve mb-6">Other Projects</h3>
      <div class="grid md:grid-cols-2 gap-6">
        {otherProjects.map(project => (
          <div class="group bg-mantle rounded-lg p-6 transition-all duration-300 hover:shadow-lg hover:shadow-blue/10 hover:-translate-y-1">
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-blue/20 to-green/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
                </svg>
              </div>
              <div class="flex gap-3">
                <a 
                  href={project.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue/50 rounded p-1"
                  aria-label="View source code"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                <a 
                  href={project.demo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-green/50 rounded p-1"
                  aria-label="View live demo"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              </div>
            </div>
            
            <h4 class="text-lg font-semibold text-white mb-2 group-hover:text-green transition-colors duration-300">
              {project.title}
            </h4>
            <p class="text-gray-300 text-sm mb-4 leading-relaxed">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-1">
              {project.technologies.slice(0, 3).map(tech => (
                <span class="px-2 py-1 bg-blue/10 text-blue text-xs rounded border border-blue/20">
                  {tech}
                </span>
              ))}
              {project.technologies.length > 3 && (
                <span class="px-2 py-1 text-gray-400 text-xs">
                  +{project.technologies.length - 3} more
                </span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="text-center">
      <p class="text-gray-400 mb-4">Want to see more of my work?</p>
      <a 
        href="https://github.com/Macnolo0x7D4" 
        target="_blank" 
        rel="noopener noreferrer"
        class="btn-secondary inline-flex items-center"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View All Projects on GitHub
      </a>
    </div>
  </div>
</Section>